@using System.Globalization
@model web.Models.ViewCOSEMComplexTypeField

@{
	ViewBag.Title = "Edit field properties";
	Layout = "~/Views/Shared/_LayoutModeling.cshtml";
}

<h2>Edit field properties</h2>

<p>
	@Html.ActionLink("Fields", "Index/" + Model.AggregateTypeID.ToString(CultureInfo.InvariantCulture))
</p>

@using (Html.BeginForm()) {
	@Html.ValidationSummary(true)
	<fieldset>
		<legend>Compex COSEM type field properties</legend>

		@Html.HiddenFor(model => model.ID)

		<table style="width:100%;">
			<tr>
				<td style="border: 0 hidden;">
					<div class="editor-label">
						@Html.LabelFor(model => model.Name, "Field name")
					</div>
				</td>
				<td style="border: 0 hidden;">
					<div class="editor-field">
						@Html.EditorFor(model => model.Name)
						@Html.ValidationMessageFor(model => model.Name)
					</div>
				</td>
			</tr>

			<tr>
				<td style="border: 0 hidden;">
					<div class="editor-label">
						@Html.LabelFor(model => model.AggregateTypeID, "Aggregate type name")
					</div>
				</td>
				<td style="border: 0 hidden;">
					<div class="editor-field">
						@Html.DropDownList("AggregateTypeIDs")
						@Html.ValidationMessageFor(model => model.AggregateTypeID)
					</div>
				</td>
			</tr>

			<tr>
				<td style="border: 0 hidden;">
					<div class="editor-label">
						@Html.LabelFor(model => model.TypeID, "Field type name")
					</div>
				</td>
				<td style="border: 0 hidden;">
					<div class="editor-field">
						@Html.DropDownList("TypeIDs")
						@Html.ValidationMessageFor(model => model.TypeID)
					</div>
				</td>
			</tr>
		</table>
	</fieldset>
	<p>
		<input type="submit" value="Save" />
	</p>
}
