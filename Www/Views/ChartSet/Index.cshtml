@model IEnumerable<web.Models.ViewChartSet>

@{
	ViewBag.Title = "Chart sets";
	Layout = "~/Views/Shared/_LayoutRepresentation.cshtml";

	var grid = new WebGrid(Model,
						   defaultSort: "Name",
						   rowsPerPage: 20); 
}

<h2>@Html.Raw(ViewBag.Title)</h2>

<p>
	@Html.ActionLink("New", "Create") |
	@Html.ActionLink("Charts & Diagrams", "Index", "Chart")
</p>

<div class="webgrid-wrapper">
	<div class="webgrid-title"></div>
	<div id="grid">
		@grid.GetHtml( 
			tableStyle: "grid", 
			headerStyle: "head", 
			alternatingRowStyle: "alt",
			footerStyle: "footer",
			columns: grid.Columns(
				grid.Column("Name", "Name", style: "product"),
				grid.Column("CellWidth", "Cell Width", style: "product"),
				grid.Column("CellHeight", "Cell Height", style: "product"),            
				grid.Column("Rows", "Rows", style: "product"),
				grid.Column("Cols", "Cols", style: "product"),
				grid.Column("Margin", "Margin", style: "product"),
				grid.Column("ID", "", @<text>@Html.ActionLink("View", "View", new { id = item.ID })</text>, style: "product", canSort: false),
				grid.Column("ID", "", @<text>@Html.ActionLink("Edit", "Edit", new { id = item.ID })</text>, style: "product", canSort: false),
				grid.Column("ID", "", @<text>@Html.ActionLink("Details", "Details", new { id = item.ID })</text>, style: "product", canSort: false),
				grid.Column("ID", "", @<text>@Html.ActionLink("Delete", "Delete", new { id = item.ID })</text>, style: "product", canSort: false)
			),
			numericLinksCount: 20
		)
	</div>
</div>
