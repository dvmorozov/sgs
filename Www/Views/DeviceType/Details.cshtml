@model web.Models.ViewDeviceType

@{
	ViewBag.Title = "Details of device type";
	Layout = "~/Views/Shared/_LayoutModeling.cshtml";
}

<h2>Details of device type</h2>

<p>
	@Html.ActionLink("Edit", "Edit", new { id=Model.ID }) |
	@Html.ActionLink("Device Types", "Index")
</p>

<fieldset>
	<legend>Device type properties</legend>

	<table style="width:100%;">
		<tr>
			<td style="border: 0 hidden;">
				<div class="display-label">Description</div>
			</td>
			<td style="border: 0 hidden;">
				<div class="display-field">
					@Html.Raw(Model.Description.TrimEnd())
				</div>
			</td>
		</tr>
		<tr>
			<td style="border: 0 hidden;">
				<div class="display-label">Standard</div>
			</td>
			<td style="border: 0 hidden;">
				<div class="display-field">
					@Html.Raw(Model.Standard.ToString())
				</div>
			</td>
		</tr>
	</table>
</fieldset>
