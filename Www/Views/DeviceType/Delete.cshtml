@model web.Models.ViewDeviceType

@{
	ViewBag.Title = "Delete device type";
	Layout = "~/Views/Shared/_LayoutModeling.cshtml";
}

<h2>Delete device type</h2>

<p>
	@Html.ActionLink("Device Types", "Index")
</p>

<h3>Are you sure you want to delete this device type? This will destroy all the information associated with this device type!</h3>
<fieldset>
	<legend>Device type properties</legend>

	<table style="width:100%;">
		<tr>
			<td style="border: 0 hidden;">
				<div class="display-label">Description</div>
			</td>
			<td style="border: 0 hidden;">
				<div class="display-field">
					@Html.DisplayFor(model => model.Description)
				</div>
			</td>
		</tr>
	</table>
</fieldset>
@using (Html.BeginForm()) {
	<p>
		<input type="submit" value="Delete" />
	</p>
}
