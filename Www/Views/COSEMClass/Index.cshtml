@model IEnumerable<web.Models.ViewCOSEMClass>

@{
	ViewBag.Title = "COSEM classes";
	Layout = "~/Views/Shared/_LayoutModeling.cshtml";

	var grid = new WebGrid(Model,
						   defaultSort: "ClassName",
						   rowsPerPage: 20); 
}

<h2>COSEM classes</h2>

<p>
	@Html.ActionLink("New", "Create") | 
	@Html.ActionLink("Data Types", "Index", "CosemDataType")
</p>

<div class="webgrid-wrapper">
	<div class="webgrid-title"></div>
	<div id="grid">
		@grid.GetHtml( 
			tableStyle: "grid", 
			headerStyle: "head", 
			alternatingRowStyle: "alt",
			footerStyle: "footer",
			columns: grid.Columns(
				grid.Column("ClassName", "Class", style: "product"),
				grid.Column("CardinalityMin", "Min. Cardinality", style: "product"),
				grid.Column("CardinalityMax", "Max. Cardinality", style: "product"),
				grid.Column("COSEMClassID", "Identifier", style: "product"),
				grid.Column("Version", "Version", style: "product"),
				grid.Column("Standard", "Standard", style: "product"),
				grid.Column("ID", "", @<text>@Html.ActionLink("Attributes", "Index", "CosemAttribute", new { id = item.ID }, null)</text>, style: "product", canSort: false),
				grid.Column("ID", "", @<text>@Html.ActionLink("Methods", "Index", "CosemMethod", new { id = item.ID }, null)</text>, style: "product", canSort: false),
				grid.Column("ID", "", @<text>@Html.ActionLink("Edit", "Edit", new { id = item.ID })</text>, style: "product", canSort: false),
				grid.Column("ID", "", @<text>@Html.ActionLink("Details", "Details", new { id = item.ID })</text>, style: "product", canSort: false),
				grid.Column("ID", "", @<text>@Html.ActionLink("Delete", "Delete", new { id = item.ID })</text>, style: "product", canSort: false)
			),
			numericLinksCount: 20
		)
	</div>
</div>
