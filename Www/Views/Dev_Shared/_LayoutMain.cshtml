<!DOCTYPE html>
<html>
<head>
	<title>@ViewBag.Title</title>
	<link href="@Url.Content("https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css")" rel="stylesheet" type="text/css" media="all" />
	<link href="@Url.Content("https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap-theme.min.css")" rel="stylesheet" type="text/css" media="all" />
	
	<link href="@Url.Content("~/Content/themes/flick/jquery.ui.all.css")" rel="stylesheet" type="text/css" media="all" />
	
	<link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
	
	<script src="@Url.Content("https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js")" type="text/javascript"></script>
	<script src="@Url.Content("~/Scripts/jquery-1.6.2.js")" type="text/javascript"></script>
	<script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
	<script src="@Url.Content("~/Scripts/ui/jquery-ui-1.8.16.custom.js")" type="text/javascript"></script>
	<script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.js")" type="text/javascript"></script>

	<script type="text/javascript">
		window.onload = function () {
			var v = document.getElementById('Submit');
			if (null != v) v.focus();
		}
	</script>
	
@* ReSharper disable UnusedParameter *@
@* ReSharper disable StatementIsNotTerminated *@
@* ReSharper disable UnknownCssClass *@
<script>
	(function (i, s, o, g, r, a, m) {
		i['GoogleAnalyticsObject'] = r; i[r] = i[r] || function () {
			(i[r].q = i[r].q || []).push(arguments)
		}, i[r].l = 1 * new Date(); a = s.createElement(o),
		m = s.getElementsByTagName(o)[0]; a.async = 1; a.src = g; m.parentNode.insertBefore(a, m)
	})(window, document, 'script', '//www.google-analytics.com/analytics.js', 'ga');

	ga('create', 'UA-57282163-1', 'auto');
	ga('send', 'pageview');

</script>
@* ReSharper restore StatementIsNotTerminated *@
@* ReSharper restore UnusedParameter *@
</head>
	<body>
		<div class="page">
			<div id="header">
				<div class="container" style="width: 100%;">
					<div class="row">
						<div class="col-md-6">
							<div id="menucontainer">
								<ul id="menu">
									@if (Roles.IsUserInRole(User.Identity.Name, "Administrator"))
									{
										@Html.Raw("<li>") @Html.ActionLink("Metering", "Index", "DeviceType") @Html.Raw("</li>")                        
											@*Html.Raw("&#32;<li>") @Html.ActionLink("Substation Automation", "Index", "_SAConfigProject") @Html.Raw("</li>")*@
											@*Html.Raw("&#32;<li>") @Html.ActionLink("Fault Recording", "Index", "_FRRecord") @Html.Raw("</li>")*@
										@Html.Raw("&#32;<li>") @Html.ActionLink("Video Monitoring", "Index", "Group") @Html.Raw("</li>")
									}
									else
									{
										if (Roles.IsUserInRole(User.Identity.Name, "User"))
										{
											@Html.Raw("<li>") @Html.ActionLink("Metering", "Index", "DeviceType") @Html.Raw("</li>")
										}
										else
										{
											@Html.Raw(" ")
											<!-- <li>@Html.ActionLink("Data", "Upload", "Data")</li> -->
											<li>@Html.ActionLink("Home", "Index", "Home")</li>
											<li>@Html.ActionLink("Contribute", "Contribute", "Home")</li>
											<li>@Html.ActionLink("Demo", "Demo", "Home")</li>
											<li>@Html.ActionLink("Downloads", "Index", "Downloads")</li>
										}
									}
									&#32;
									<li>@Html.Partial("_LogOnPartial")</li>
								</ul>
							</div>
						</div>
						<div class="col-md-2">
							<div id="title">
								<div class="logo">
									@if (null != User.Identity.Name && !User.Identity.Name.IsEmpty()/*should be!*/)
									{
										<text>@Html.Raw((String)ViewBag.AppName1) <span>@Html.Raw((String)ViewBag.AppName2)</span> greets <strong>@User.Identity.Name</strong></text>
									}
									else
									{ 
										<text>@Html.Raw((String)ViewBag.AppName1) <span>@Html.Raw((String)ViewBag.AppName2)</span><span class="slogan"> - the whole grid in your pocket</span></text>
									}
								</div>
							</div>
						</div>
						<div class="col-md-4">
						</div>
					</div>
				</div>
			</div>
			<div class="container" style="width: 100%;">
				<div class="row">
					<div class="col-md-8">
						<div @Html.Raw("id=\"main_rational_city\"")>
							@RenderBody()
						</div>
						<div id="footer">
							Copyright &copy; 2015 <span class="logo" style="position:relative;">@Html.Raw((String)ViewBag.AppName1) <span>@Html.Raw((String)ViewBag.AppName2)</span></span> | Rev. 3420 | Last updated 24 May 2015 at 20:24:03
						</div>
					</div>
					<div class="col-md-4">
					<div>
						<script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
						<!-- Big vertical banner at RationalCity.com -->
						@* ReSharper disable UnknownCssClass *@
						<ins class="adsbygoogle"
							 style="display:inline-block;width:300px;height:600px"
							 data-ad-client="ca-pub-8470958084127593"
							 data-ad-slot="1917407060"></ins>
						@* ReSharper restore UnknownCssClass *@
						<script>
							(adsbygoogle = window.adsbygoogle || []).push({});
						</script>
					</div>
				</div>
				</div>
			</div>
		</div>
	</body>
</html>
@* ReSharper restore UnknownCssClass *@
