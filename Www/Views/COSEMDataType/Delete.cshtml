@model web.Models.ViewCOSEMDataType

@{
	ViewBag.Title = "Delete the COSEM data type";
	Layout = "~/Views/Shared/_LayoutModeling.cshtml";
}

<h2>Delete the COSEM data type</h2>

<p>
	@Html.ActionLink("Types", "Index")
</p>

<h3>Are you sure you want to delete this COSEM type?</h3>
<fieldset>
	<legend>COSEM type properties</legend>

	<table style="width:100%;">
		<tr>
			<td style="border: 0 hidden;">
				<div class="display-label">Type name</div>
			</td>
			<td style="border: 0 hidden;">
				<div class="display-field">
					@Html.DisplayFor(model => model.Name)
				</div>
			</td>
		</tr>

		<tr>
			<td style="border: 0 hidden;">
				<div class="display-label">Ancestor type name</div>
			</td>
			<td style="border: 0 hidden;">
				<div class="display-field">
					@Html.DisplayFor(model => model.AncestorTypeName)
				</div>
			</td>
		</tr>

		<tr>
			<td style="border: 0 hidden;">
				<div class="display-label">Item bit size</div>
			</td>
			<td style="border: 0 hidden;">
				<div class="display-field">
					@Html.DisplayFor(model => model.ItemBitSize)
				</div>
			</td>
		</tr>

		<tr>
			<td style="border: 0 hidden;">
				<div class="display-label">Item count (type cardinality)</div>
			</td>
			<td style="border: 0 hidden;">
				<div class="display-field">
					@Html.DisplayFor(model => model.ItemCount)
				</div>
			</td>
		</tr>

		<tr>
			<td style="border: 0 hidden;">
				<div class="display-label">Standard</div>
			</td>
			<td style="border: 0 hidden;">
				<div class="display-field">
					@Html.DisplayFor(model => model.Standard)
				</div>
			</td>
		</tr>
	</table>
</fieldset>
@using (Html.BeginForm()) {
	<p>
		<input type="submit" value="Delete" />
	</p>
}
