@model IEnumerable<web.Models.ViewDeviceOwner>

@{
	ViewBag.Title = "Meter owners";
	Layout = "~/Views/Shared/_LayoutAcquisition.cshtml";

	var grid = new WebGrid(Model,
						   defaultSort: "FirstName",
						   rowsPerPage: 20); 
}

<h2>@Html.Raw(ViewBag.Title)</h2>

<p>
	@Html.ActionLink("Cancel", ""/*empty action name*/, (String)ViewBag.ReturnTo) |
	@Html.ActionLink("New", "Create", new { returnTo = (String)ViewBag.ReturnTo })
</p>

<div class="webgrid-wrapper">
	<div class="webgrid-title"></div>
	<div id="grid">
		@grid.GetHtml( 
			tableStyle: "grid", 
			headerStyle: "head", 
			alternatingRowStyle: "alt",
			footerStyle: "footer",
			columns: grid.Columns(
				grid.Column("FirstName", "First Name", style: "product"),
				grid.Column("LastName", "Last Name", style: "product"),
				grid.Column("Company", "Company", style: "product"),
				grid.Column("Apartament", "A/O", style: "product"),
				grid.Column("Building", "Building", style: "product"),
				grid.Column("Street", "Street", style: "product"),
				grid.Column("City", "City", style: "product"),
				grid.Column("State", "State", style: "product"),
				grid.Column("Country", "Country", style: "product"),
				grid.Column("ZipCode", "Zip Code", style: "product"),
				grid.Column("EMail", "E-Mail", style: "product"),
				grid.Column("Phone", "Phone", style: "product"),
				grid.Column("Cell", "Cell", style: "product"),
				grid.Column("ID", "", @<text>@Html.ActionLink("Select", "SelectOwner", "DeviceOwner", new { id = item.ID, returnTo = (String)ViewBag.ReturnTo }, null)</text>, style: "product", canSort: false),
				grid.Column("ID", "", @<text>@Html.ActionLink("Edit", "Edit", new { id = item.ID })</text>, style: "product", canSort: false),
				grid.Column("ID", "", @<text>@Html.ActionLink("Details", "Details", new { id = item.ID })</text>, style: "product", canSort: false),
				grid.Column("ID", "", @<text>@Html.ActionLink("Delete", "Delete", new { id = item.ID })</text>, style: "product", canSort: false)
			),
			numericLinksCount: 20
		)
	</div>
</div>
