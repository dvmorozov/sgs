@model IEnumerable<web.Models.ViewCOSEMDataType>

@{
	ViewBag.Title = "COSEM data types";
	Layout = "~/Views/Shared/_LayoutModeling.cshtml";

	var grid = new WebGrid(Model,
						   defaultSort: "Name",
						   rowsPerPage: 20); 
}

<h2>@Html.Raw(ViewBag.Title)</h2>

<p>
	@Html.ActionLink("New", "Create") |
	@Html.ActionLink("Classes", "Index", "CosemClass")
</p>

<div class="webgrid-wrapper">
	<div class="webgrid-title"></div>
	<div id="grid">
		@grid.GetHtml( 
			tableStyle: "grid", 
			headerStyle: "head", 
			alternatingRowStyle: "alt",
			footerStyle: "footer",
			columns: grid.Columns(
				grid.Column("Name", "Type", style: "product"),
				grid.Column("AncestorTypeName", "Ancestor Type", style: "product"),
				grid.Column("ItemBitSize", "Item Bit Size", style: "product"),
				grid.Column("ItemCount", "Item Count", style: "product"),
				grid.Column("Standard", "Standard", style: "product"),
				grid.Column("ID", "", @<text>@Html.ActionLink("Fields", "Index", "CosemComplexTypeField", new { id = item.ID }, null)</text>, style: "product", canSort: false),
				grid.Column("ID", "", @<text>@Html.ActionLink("Edit", "Edit", new { id=item.ID })</text>, style: "product", canSort: false),
				grid.Column("ID", "", @<text>@Html.ActionLink("Details", "Details", new { id=item.ID })</text>, style: "product", canSort: false),
				grid.Column("ID", "", @<text>@Html.ActionLink("Delete", "Delete", new { id=item.ID })</text>, style: "product", canSort: false)
			),
			numericLinksCount: 20
		)
	</div>
</div>
