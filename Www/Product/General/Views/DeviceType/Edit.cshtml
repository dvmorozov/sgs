@model web.Models.ViewDeviceType

@{
	ViewBag.Title = "Edit device type properties";
	Layout = "~/Views/Shared/_LayoutModeling.cshtml";
}

<h2>Edit device type properties</h2>

<p>
	@Html.ActionLink("Device Types", "Index")
</p>

@using (Html.BeginForm()) {
	@Html.ValidationSummary(true)
	<fieldset>
		<legend>Device type properties</legend>

		@Html.HiddenFor(model => model.ID)

		<table style="width:100%;">
			<tr>
				<td style="border: 0 hidden;">
					<div class="editor-label">
						@Html.LabelFor(model => model.Description)
					</div>
				</td>
				<td style="border: 0 hidden;">
					<div class="editor-field">
						@Html.EditorFor(model => model.Description)
						@Html.ValidationMessageFor(model => model.Description)
					</div>
				</td>
			</tr>
			<tr>
				<td style="border: 0 hidden;">
					<div class="editor-label">
						@if (Roles.IsUserInRole(User.Identity.Name, "Administrator"))
						{
							@Html.LabelFor(model => model.Standard)
						}
					</div>
				</td>
				<td style="border: 0 hidden;">
					<div class="editor-field">
						@if (Roles.IsUserInRole(User.Identity.Name, "Administrator"))
						{
							@Html.CheckBoxFor(model => model.Standard)
						}
					</div>
				</td>
			</tr>
		</table>
	</fieldset>
	<p>
		<input type="submit" value="Save"/>
	</p>
}
