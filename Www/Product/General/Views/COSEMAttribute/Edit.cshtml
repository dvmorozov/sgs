@using System.Globalization
@model web.Models.ViewCOSEMAttribute

@{
	ViewBag.Title = "Edit COSEM attribute properties";
	Layout = "~/Views/Shared/_LayoutModeling.cshtml";
}

<h2>Edit COSEM attribute properties</h2>

<p>
	@Html.ActionLink("Attributes", "Index/" + Model.COSEMClassID.ToString(CultureInfo.InvariantCulture))
</p>

@using (Html.BeginForm()) {
	@Html.ValidationSummary(true)
	<fieldset>
		<legend>COSEM attribute properties</legend>

		@Html.HiddenFor(model => model.ID)
		@Html.HiddenFor(model => model.COSEMClassID)

		<table style="width:100%;">
			<tr>
				<td style="border: 0 hidden;">
					<div class="editor-label">
						@Html.LabelFor(model => model.Dynamic, "Dynamic (updated by device itself)")
					</div>
				</td>
				<td style="border: 0 hidden;">
					<div class="editor-field">
						@Html.EditorFor(model => model.Dynamic)
						@Html.ValidationMessageFor(model => model.Dynamic)
					</div>
				</td>
			</tr>

			<tr>
				<td style="border: 0 hidden;">
					<div class="editor-label">
						@Html.LabelFor(model => model.Name, "Attribute name")
					</div>
				</td>
				<td style="border: 0 hidden;">
					<div class="editor-field">
						@Html.EditorFor(model => model.Name)
						@Html.ValidationMessageFor(model => model.Name)
					</div>
				</td>
			</tr>

			<tr>
				<td style="border: 0 hidden;">
					<div class="editor-label">
						@Html.LabelFor(model => model.COSEMDataTypeID, "COSEM data type")
					</div>
				</td>
				<td style="border: 0 hidden;">
					<div class="editor-field">
						@Html.DropDownList("COSEMDataTypeID")
						@Html.ValidationMessageFor(model => model.COSEMDataTypeID)
					</div>
				</td>
			</tr>

			<tr>
				<td style="border: 0 hidden;">
					<div class="editor-label">
						@Html.LabelFor(model => model.MinValue, "Min. value")
					</div>
				</td>
				<td style="border: 0 hidden;">
					<div class="editor-field">
						@Html.EditorFor(model => model.MinValue)
						@Html.ValidationMessageFor(model => model.MinValue)
					</div>
				</td>
			</tr>

			<tr>
				<td style="border: 0 hidden;">
					<div class="editor-label">
						@Html.LabelFor(model => model.MaxValue, "Max. value")
					</div>
				</td>
				<td style="border: 0 hidden;">
					<div class="editor-field">
						@Html.EditorFor(model => model.MaxValue)
						@Html.ValidationMessageFor(model => model.MaxValue)
					</div>
				</td>
			</tr>

			<tr>
				<td style="border: 0 hidden;">
					<div class="editor-label">
						@Html.LabelFor(model => model.DefValue, "Def. value")
					</div>
				</td>
				<td style="border: 0 hidden;">
					<div class="editor-field">
						@Html.EditorFor(model => model.DefValue)
						@Html.ValidationMessageFor(model => model.DefValue)
					</div>
				</td>
			</tr>
		</table>
	</fieldset>
	<p>
		<input type="submit" value="Save" />
	</p>
}
