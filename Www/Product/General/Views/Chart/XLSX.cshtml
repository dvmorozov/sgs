@model web.Models.ViewChart

@{
	ViewBag.Title = Model.Name.TrimEnd();
	Layout = "~/Views/Shared/_LayoutFrame.cshtml";
}


@{
	new Chart(ViewBag.Width != null ? (Int32)ViewBag.Width : Model.Width, ViewBag.Height != null ? (Int32)ViewBag.Height : Model.Height)
		.AddTitle(Model.Name)
		.AddSeries(
			name: "Employee",
			xValue: new[] { "Peter", "Andrew", "Julie", "Mary", "Dave" },
			yValues: new[] { "2", "6", "4", "5", "3" })
		.Write();
}

